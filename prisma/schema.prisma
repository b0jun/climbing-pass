generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Pass {
  id          String     @id @default(cuid())
  name        String
  phoneNumber String
  dateOfBirth String
  signature   String
  type        PassType
  status      PassStatus @default(WAIT)
  shoesRental Boolean    @default(false)
  locale      Locale     @default(ko)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  gymId       String?
  userId      String?
  gym         Gym?       @relation(fields: [gymId], references: [domain])
  user        User?      @relation(fields: [userId], references: [id])

  @@index([userId, gymId, status, createdAt])
  @@index([userId, gymId, status, name, phoneNumber])
}

model Gym {
  id          String   @id @default(cuid())
  name        String
  name_en     String   @default("")
  location    String   @default("")
  location_en String   @default("")
  domain      String   @unique
  disabled    Boolean  @default(false)
  logo        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  passes      Pass[]
}

model User {
  id         String   @id @default(cuid())
  identifier String   @unique
  password   String
  email      String?  @unique
  name       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  gyms       Gym[]
  passes     Pass[]
}

enum PassType {
  DayPass
  DayExperience
}

enum PassStatus {
  WAIT
  APPROVED
  DELETED
}

enum Locale {
  ko
  en
}
